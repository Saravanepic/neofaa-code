            "type": "textarea",
            "id": "maintitle",
            "label": "Main Title"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          },
          {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
        },
         {
          "type": "header",
          "content": "Image Options"
        },
        {
            "type": "image_picker",
            "id": "before_image",
            "label": "Before Image"
          },
        {
            "type": "image_picker",
            "id": "after_image",
            "label": "After Image"
          }
      
    ],
    "presets": [
    {
      "name": "Custom Banner"
    }
    ]
  }
{% endschema %}

